\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{aligned_table}[2026/01/02 Reusable table structures]

\RequirePackage{xparse}
\RequirePackage{array}
\RequirePackage[table]{xcolor}

\definecolor{PastelYellow}{RGB}{255,249,196}

% Ragged-right p-column
\newcolumntype{P}[1]{>{\raggedright\arraybackslash}p{#1}}

% Spacing around the separator symbol (":" or "-" etc.)
\NewDocumentCommand{\VocabSep}{m}{\hspace{0.4em}#1\hspace{0.4em}}

\makeatletter
\newif\ifVT@first

% Build \VT@spec from a comma-list like: l,l,P  (P becomes P{<width>})
\newcommand{\VT@buildspec}[3]{%
  \def\VT@spec{}%
  \VT@firsttrue
  \def\VT@P{P}%
  \@for\VT@col:=#3\do{%
    \ifVT@first
      \VT@firstfalse
    \else
      \edef\VT@spec{\VT@spec @{\noexpand\VocabSep{#2}} }%
    \fi
    \ifx\VT@col\VT@P
      \edef\VT@spec{\VT@spec P{#1} }%
    \else
      \edef\VT@spec{\VT@spec \VT@col }%
    \fi
  }%
  \edef\VT@spec{@{}\VT@spec @{} }%
}

% Usage:
% \begin{VocabTable}[<P width>][<sep>][<col list>] ... \end{VocabTable}
% Defaults: width=0.75\linewidth, sep=:, cols=l,P
\NewDocumentEnvironment{VocabTable}{ O{0.75\linewidth} O{:} O{l,P} }
{%
  \VT@buildspec{#1}{#2}{#3}%
  \expandafter\tabular\expandafter{\VT@spec}%
}
{%
  \endtabular
}
\makeatother

% Centered 3-part “A + B + C” table with a colored merged title row
% Usage: \begin{PlusHeaderTable}{<title>} ... \end{PlusHeaderTable}
\NewDocumentEnvironment{PlusHeaderTable}{ m O{PastelYellow} }
{%
  \begin{center}
  \renewcommand{\arraystretch}{1.2}
  \begin{tabular}{@{} l @{\ +\ } c @{\ +\ } l @{}}
    \rowcolor{#2}\multicolumn{3}{c}{\textbf{#1}}\\
    \hline
}
{%
  \end{tabular}
  \end{center}
}
